extend schema
  @link(url: "https://specs.apollo.dev/federation/v2.3", import: ["@key", "@shareable"])

type Query {
  """
  Get all users
  """
  users: [User!]!

  """
  Get a user by ID
  """
  user(id: ID!): User
}

"""
User entity
"""
type User @key(fields: "id") {
  """
  User ID
  """
  id: ID!

  """
  User name
  """
  name: String!

  """
  User email
  """
  email: String!
}
